<mvc:View controllerName="waterworkflowuimodule.controller.MyTaskUI" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <App id="app">
        <pages>
            <Page showHeader="false" showFooter="false">
				<content>
					<HBox alignItems="Center" class="sapUiSmallMarginTop sapUiSmallMarginBegin">
						<Text class="sapUiSmallMarginEnd" text="Select the Countries/Area will be supplying data: " />
						<Text text="{context>/ReportingCountry}" />
					</HBox>
					<HBox alignItems="Center" class="sapUiSmallMarginTop sapUiSmallMarginBegin">
						<Text class="sapUiSmallMarginEnd" text="Reporting Year: " />
						<Text text="{context>/reportingYear}" />
					</HBox>
					<HBox alignItems="Center" class="sapUiSmallMarginTop sapUiSmallMarginBegin">
						<Text class="sapUiSmallMarginEnd" text="Start Date of Reporting Year: " />
						<Text text="{context>/startDate}" />
					</HBox>
					<HBox alignItems="Center" class="sapUiSmallMarginTop sapUiSmallMarginBegin">
						<Text class="sapUiSmallMarginEnd" text="End Date of Reporting Year: " />
						<Text text="{context>/endDate}" />
					</HBox>
					<HBox alignItems="Center" class="sapUiSmallMarginTop sapUiSmallMarginBegin">
						<Text class="sapUiSmallMarginEnd" text="Total Water withdrawn in thousand cubic meters: " />
						<Text text="{context>/TotalWaterWithdrawn} (m3)" />
					</HBox>
					<HBox alignItems="Center" class="sapUiSmallMarginTop sapUiSmallMarginBegin">
						<Text class="sapUiSmallMarginEnd" text="Total Water Consumed in thousand cubic meters: " />
						<Text text="{context>/TotalWaterConsumed} (m3)" />
					</HBox>
					<HBox alignItems="Center" class="sapUiSmallMarginTop sapUiSmallMarginBegin">
						<Text class="sapUiSmallMarginEnd" text="Percentage of each in regions with High or Extremely High Baseline Water Stress in Percentage: " />
						<Text text="{context>/TotalWaterStress}" />
					</HBox>
					<HBox alignItems="Center" class="sapUiSmallMarginTop sapUiSmallMarginBegin">
						<Text class="sapUiSmallMarginEnd" text="Data Owner: " />
						<Text text="{task>/CreatedByName}" />
					</HBox>
					<HBox alignItems="Center" class="sapUiSmallMarginTop sapUiSmallMarginBegin">
						<Text class="sapUiSmallMarginEnd" text="Additional Reporter: " />
						<Text text="Christopher Tam, Nidhideep Bhandari, Demo User" />
					</HBox>
					<HBox alignItems="Center" class="sapUiSmallMarginTop sapUiSmallMarginBegin">
						<Text class="sapUiSmallMarginEnd" text="Reporting Country: " />
						<Text text="{context>/ReportingCountry}" />
					</HBox>
					<HBox alignItems="Center" class="sapUiSmallMarginTop sapUiSmallMarginBegin">
						<Text class="sapUiSmallMarginEnd" text="Comments: " />
						<TextArea rows="5" cols="100" value="{context>/Comments}" editable="true" />
					</HBox>
					<HBox alignItems="Center" class="sapUiSmallMarginTop sapUiSmallMarginBegin">
						<Text class="sapUiSmallMarginEnd" text="To be approved by: " />
						<Text text="{context>/approvers}" />
					</HBox>
					<Button text="Download Attachment" icon="sap-icon://download" class="sapUiSmallMarginTop sapUiTinyMarginBegin" />
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>